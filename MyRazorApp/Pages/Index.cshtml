@page
@model MyRazorApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>"Add New Class"</h2>
            <form method="post">
                <!-- Prompt Make a form that Changes when an entity is not null -->
                @if (Model.EditedClass != null)
                {
                    <input type="hidden" name="id" value="@Model.EditedClass.Id" />
                }
                <div class="form-group">
                    <label for="ClassName">Class Name</label>
                    <input type="text" class="form-control" id="ClassName" name="className" value="@Model.EditedClass?.ClassName" required />
                </div>

                <div class="form-group">
                    <label for="StudentCount">Student Count</label>
                    <input type="number" class="form-control" id="StudentCount" name="studentCount" value="@Model.EditedClass?.StudentCount" required />
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" id="Description" name="description" value="@Model.EditedClass?.Description" required />
                </div>

                <!-- Make a button that Changes when a variable is null-->
                @if (Model.EditedClass == null)
                {
                    <button type="submit" class="btn btn-primary" asp-page-handler="Add">Add Class</button>
                }
                else
                {
                    <button type="submit" class="btn btn-warning" asp-page-handler="Edit">Save Changes</button>
                }
            </form>
        </div>

        <div class="col-md-6">
            <h2>Class List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Class Name</th>
                        <th>Student Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Prompt : make a table table list elements of this ClassList <ClassInformationModel> -->
                    @for (int i = 0; i < IndexModel.ClassList.Count; i++)
                    {
                        var item = IndexModel.ClassList[i];
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ClassName</td>
                            <td>@item.StudentCount</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="@Url.Page("./Index", new { id = item.Id, handler = "Edit" })" class="btn btn-warning">Edit</a>
                                <form method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
