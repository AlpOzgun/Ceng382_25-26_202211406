@page
@model MyRazorApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 form-container">
            <h2 class="section-header">Add New Class</h2>
            <form method="post">
                <!-- Prompt Make a form that Changes when an entity is not null -->
                @if (Model.EditedClass != null)
                {
                    <input type="hidden" name="id" value="@Model.EditedClass.Id" />
                }
                <div class="form-group">
                    <label for="ClassName">Class Name</label>
                    <input type="text" class="form-control" id="ClassName" name="className" value="@Model.EditedClass?.ClassName" required />
                </div>

                <div class="form-group">
                    <label for="StudentCount">Student Count</label>
                    <input type="number" class="form-control" id="StudentCount" name="studentCount" value="@Model.EditedClass?.StudentCount" required />
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" class="form-control" id="Description" name="description" value="@Model.EditedClass?.Description" required />
                </div>

                <!-- Make a button that Changes when a variable is null-->
                @if (Model.EditedClass == null)
                {
                    <button type="submit" class="btn btn-primary action-btn" asp-page-handler="Add">Add Class</button>
                }
                else
                {
                    <button type="submit" class="btn btn-warning action-btn" asp-page-handler="Edit">Save Changes</button>
                }
            </form>
        </div>
        <!-- Prompt: make a table that lists elements of ClassList <ClassInformationModel> -->
        <div class="col-md-6 table-container">
            <h2 class="section-header">Class List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Class Name</th>
                        <th>Student Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Prompt: make a table that lists elements of ClassList <ClassInformationModel> -->
                    @for (int i = 0; i < IndexModel.ClassList.Count; i++)
                    {
                        var item = IndexModel.ClassList[i];
                        <tr>
                            <td style="background: rgb(97, 241, 234);">@item.Id</td>
                            <td style="background: rgb(136, 223, 218);">@item.ClassName</td>
                            <td style="background: rgb(97, 241, 234);">@item.StudentCount</td>
                            <td style="background: rgb(136, 223, 218);">@item.Description</td>
                            <td class="action-buttons" style="background: rgb(97, 241, 234); vertical-align: middle;">
                                <a href="@Url.Page("./Index", new { id = item.Id, handler = "Edit" })" class="btn btn-warning table-btn" style="justify-content: center;">
                                    <img src="/images/pencil.png" style="width: 30px; height: 30px;">
                                </a>
                                <form method="post" class="delete-form">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger table-btn" asp-page-handler="Delete" style="justify-content: center;">
                                        <img src="/images/trash.png" style="width: 30px; height: 30px;">
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
